<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alan.project.mapper.NotificationMapper">
    <insert id="insertNotification" parameterType="com.alan.project.dao.Notification">
        insert into t_notification (notifier_id,notifier_name,notifier_avatar,receiver_id,outer_id,outer_title,type,status,content,create_time)
        values (#{notifierId},#{notifierName},#{notifierAvatar},#{receiverId},#{outerId},#{outerTitle},#{type},#{status},#{content},#{createTime},);
    </insert>
</mapper>