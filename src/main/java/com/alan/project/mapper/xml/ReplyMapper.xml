<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alan.project.mapper.ReplyMapper">
  <insert id="insertReply" parameterType="com.alan.project.dao.Reply">
      insert into t_reply (topic_id,comment_id,reply_id,from_uid,from_name,from_avatar,to_uid,to_name,to_avatar,create_time,content)
        values (#{topicId},#{commentId},#{replyId},#{fromUid},#{fromName},#{fromAvatar},#{toUid},#{toName},#{toAvatar},#{createTime},#{content})
  </insert>


</mapper>