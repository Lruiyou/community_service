<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alan.project.mapper.QuestionMapper">
    <insert id="createQuestion" parameterType="com.alan.project.dao.Question" >
        insert into t_question (creator,github_url,title,content,html_content,tag,create_time,modified)
        values (#{creator},#{githubUrl},#{title},#{content},#{htmlContent},#{tag},#{createTime},#{modified})
    </insert>

    <select id="getQuestionByCreator" parameterType="String" resultType="com.alan.project.dao.Question">
        select * from t_question where creator = #{creator};
    </select>

    <update id="updateQuestionById" parameterType="com.alan.project.dao.Question" >
        update t_question set title = #{title}, content = #{content} ,html_content=#{htmlContent},tag=#{tag} where id = #{id}
    </update>
</mapper>